set terminal svg
set output "ExponentialDecaySim.svg"

set title "Normalized Exponential Decay"

set xlabel "x"
set ylabel "Probability Density"

set xrange [0:10]

set tics out
set xzeroaxis
set yzeroaxis

set style data histogram
set style fill transparent solid 0.5 noborder
set boxwidth 0.8 relative

stats "mc.data" using 1 nooutput

bin_width = 0.1

plot "mc.data" using (floor($1/bin_width)*bin_width+bin_width/2):(1/(bin_width * STATS_records)) smooth freq with boxes notitle
